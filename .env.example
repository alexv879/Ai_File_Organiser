# AI File Organizer - Environment Configuration Template
# Copy this file to .env and fill in your actual values
# NEVER commit .env to version control!

# ==============================================================================
# SECURITY SETTINGS
# ==============================================================================

# JWT Secret Key (REQUIRED for authentication)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
JWT_SECRET_KEY=your-super-secret-jwt-key-change-this-immediately

# JWT Configuration
JWT_ALGORITHM=HS256
JWT_EXPIRY_MINUTES=30
JWT_REFRESH_EXPIRY_DAYS=7

# ==============================================================================
# AUTHENTICATION PROVIDERS (OPTIONAL)
# ==============================================================================

# Clerk Authentication (for cloud/web version)
# Get keys from: https://dashboard.clerk.com
CLERK_SECRET_KEY=sk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx
CLERK_PUBLISHABLE_KEY=pk_test_xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ==============================================================================
# SSL/TLS CONFIGURATION (OPTIONAL - for HTTPS)
# ==============================================================================

# Enable HTTPS (set to true in production)
SSL_ENABLED=false

# SSL Certificate paths (required if SSL_ENABLED=true)
# For development, generate with: bash scripts/setup/generate_ssl_cert.sh
SSL_CERT_FILE=./data/ssl/cert.pem
SSL_KEY_FILE=./data/ssl/key.pem

# ==============================================================================
# DATABASE ENCRYPTION (OPTIONAL - recommended for production)
# ==============================================================================

# Enable database encryption with SQLCipher
DATABASE_ENCRYPTION_ENABLED=false

# Encryption key (REQUIRED if encryption enabled)
# Generate with: python -c "import secrets; print(secrets.token_urlsafe(32))"
DATABASE_ENCRYPTION_KEY=your-database-encryption-key-change-this

# ==============================================================================
# AI API KEYS (OPTIONAL - for cloud AI features)
# ==============================================================================

# OpenAI API Key (for GPT-4 Turbo)
# Get from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# Anthropic API Key (for Claude 3.5)
# Get from: https://console.anthropic.com/
ANTHROPIC_API_KEY=sk-ant-xxxxxxxxxxxxxxxxxxxxxxxxxxxxx

# ==============================================================================
# CLOUD STORAGE INTEGRATIONS (OPTIONAL)
# ==============================================================================

# Microsoft OneDrive
ONEDRIVE_CLIENT_ID=your-onedrive-client-id
ONEDRIVE_CLIENT_SECRET=your-onedrive-client-secret
ONEDRIVE_REDIRECT_URI=http://localhost:8000/auth/onedrive/callback

# Google Drive
GOOGLE_DRIVE_CLIENT_ID=your-google-client-id
GOOGLE_DRIVE_CLIENT_SECRET=your-google-client-secret
GOOGLE_DRIVE_REDIRECT_URI=http://localhost:8000/auth/google/callback

# Dropbox
DROPBOX_APP_KEY=your-dropbox-app-key
DROPBOX_APP_SECRET=your-dropbox-app-secret
DROPBOX_REDIRECT_URI=http://localhost:8000/auth/dropbox/callback

# ==============================================================================
# APPLICATION SETTINGS
# ==============================================================================

# Environment (development, staging, production)
ENVIRONMENT=development

# Debug mode (set to false in production)
DEBUG=true

# CORS Allowed Origins (comma-separated)
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,http://localhost:8000

# Rate Limiting
RATE_LIMIT_ENABLED=true
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_PER_HOUR=1000

# ==============================================================================
# MONITORING & ANALYTICS (OPTIONAL)
# ==============================================================================

# Sentry DSN (for error tracking)
SENTRY_DSN=https://xxxxx@xxxxx.ingest.sentry.io/xxxxx

# Analytics
ANALYTICS_ENABLED=false
ANALYTICS_API_KEY=your-analytics-api-key

# ==============================================================================
# EMAIL CONFIGURATION (OPTIONAL - for notifications)
# ==============================================================================

# SMTP Settings
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password
SMTP_FROM_EMAIL=noreply@aifileorganizer.com

# ==============================================================================
# ADVANCED SETTINGS
# ==============================================================================

# Ollama Configuration (for local AI)
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=qwen2.5:7b-instruct
OLLAMA_TIMEOUT=60

# Database Path
DATABASE_PATH=./data/database/aifo.db
USER_DATABASE_PATH=./data/database/users.db

# Logging Level (DEBUG, INFO, WARNING, ERROR, CRITICAL)
LOG_LEVEL=INFO
LOG_FILE=./data/logs/app.log

# Session Configuration
SESSION_COOKIE_NAME=aifo_session
SESSION_COOKIE_SECURE=false
SESSION_COOKIE_HTTPONLY=true
SESSION_COOKIE_SAMESITE=lax

# Password Policy
MIN_PASSWORD_LENGTH=12
REQUIRE_UPPERCASE=true
REQUIRE_LOWERCASE=true
REQUIRE_NUMBERS=true
REQUIRE_SPECIAL=true

# ==============================================================================
# NOTES
# ==============================================================================
#
# Security Best Practices:
# 1. Generate strong random keys for JWT_SECRET_KEY and DATABASE_ENCRYPTION_KEY
# 2. Never commit .env file to version control
# 3. Use environment-specific values (dev vs prod)
# 4. Enable SSL in production
# 5. Use strong password policy
# 6. Enable database encryption for sensitive data
# 7. Rotate API keys regularly
# 8. Use different keys for development and production
#
# Quick Setup Commands:
# - Copy template: cp .env.example .env
# - Generate JWT key: python -c "import secrets; print(secrets.token_urlsafe(32))"
# - Generate SSL cert: bash scripts/setup/generate_ssl_cert.sh
# - Install dependencies: pip install -r requirements.txt
#
# ==============================================================================
