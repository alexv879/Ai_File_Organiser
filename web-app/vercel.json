{
  "buildCommand": "npm run build",
  "devCommand": "npm run dev",
  "installCommand": "npm install",
  "framework": "nextjs",
  "regions": ["iad1"],
  "env": {
    "NEXT_PUBLIC_APP_URL": {
      "description": "The public URL of the application",
      "value": "https://ai-file-organizer.vercel.app"
    },
    "NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY": {
      "description": "Clerk publishable key for authentication"
    },
    "CLERK_SECRET_KEY": {
      "description": "Clerk secret key for authentication"
    },
    "NEXT_PUBLIC_API_URL": {
      "description": "Backend API URL",
      "value": "https://api.aifileorganizer.com"
    },
    "OPENAI_API_KEY": {
      "description": "OpenAI API key for GPT models"
    },
    "ANTHROPIC_API_KEY": {
      "description": "Anthropic API key for Claude models"
    },
    "DATABASE_URL": {
      "description": "PostgreSQL database URL"
    }
  },
  "build": {
    "env": {
      "NODE_VERSION": "18.x"
    }
  },
  "functions": {
    "api/**/*.ts": {
      "memory": 1024,
      "maxDuration": 30
    }
  },
  "headers": [
    {
      "source": "/(.*)",
      "headers": [
        {
          "key": "X-Content-Type-Options",
          "value": "nosniff"
        },
        {
          "key": "X-Frame-Options",
          "value": "DENY"
        },
        {
          "key": "X-XSS-Protection",
          "value": "1; mode=block"
        },
        {
          "key": "Referrer-Policy",
          "value": "strict-origin-when-cross-origin"
        }
      ]
    }
  ],
  "redirects": [
    {
      "source": "/dashboard",
      "has": [
        {
          "type": "header",
          "key": "x-unauthorized"
        }
      ],
      "destination": "/sign-in",
      "permanent": false
    }
  ]
}
